---
type Props = {
  img: string;
  title: string;
  author: string;
  hour: string;
};

const { img, title, author, hour } = Astro.props;
---

<li
  class="flex px-9 py-4 items-center rounded-xl justify-between bg-cs-background"
>
  <div class="flex gap-6 items-center">
    <img
      src={img}
      alt={`Profile image of the author: ${author}`}
      class="w-[84px] h-[84px] border border-slate-200 rounded-full object-cover"
    />
    <div class="flex flex-col gap-1">
      <h2 class="font-semibold">{title}</h2>
      <p class="font-medium text-sm">{author}</p>
    </div>
  </div>
  <p class="font-handlee text-lg">{hour}</p>
</li>
