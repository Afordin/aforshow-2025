---
type Props = {
  variant: "primary" | "secondary";
  href: string;
  icon?: string;
};

const { variant, href } = Astro.props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class={`py-2 rounded-md text-base font-medium ${variant === "primary" ? "bg-cs-primary px-5 hover:bg-cs-primary-hover" : "relative after:absolute after:bottom-0 after:left-1/2 after:h-0.5 after:w-0 after:bg-black after:transition-all after:duration-300 hover:after:left-0 hover:after:w-full"}`}
  ><slot /></a
>
